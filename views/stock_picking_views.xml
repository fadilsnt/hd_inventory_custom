<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="stock_picking_view_form_inherit_hd_inventory_custom" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.hd.inventory.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='product_uom_qty']" position="after">
                <field name="sales_person_ids" string="Pemilik" widget="many2many_tags" options="{'no_create': True}"/>
                <field name="owner_id" string="Sale Persons" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="pemilik_ids" widget="many2many_tags" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="btb_number" invisible="not btb_number"/>
            </xpath>
        </field>
    </record>   

    <record id="view_picking_form_inherit_sales_person_invisible" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.sales.person.invisible</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="export_stock_report.view_picking_form_inherit_sales_person"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='person_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_form_inherit_owner_invisible" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.owner.invisible</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>    
</odoo>